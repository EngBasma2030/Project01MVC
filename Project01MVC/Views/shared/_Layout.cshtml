
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    @* Start Header *@
    <header>
        <center>

            <nav class="mt-5">
                <!--3.Tag Helpers-->
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary m-2">Home</a>
                <a asp-controller="Home" asp-action="Privacy" class="btn btn-warning m-2">Privacy</a>
                <a asp-controller="Home" asp-action="AboutUs" class="btn btn-success m-2">About US</a>
                <a asp-controller="Home" asp-action="ContactUs" class="btn btn-secondary m-2">Contact US</a>
                <a asp-controller="Account" asp-action="SignIn" class="btn btn-info m-2">Login</a>
                <!--1.HTML Tag-->
                <a asp-controller="Account" asp-action="Register" class="btn btn-danger m-2">Register</a>

                <!--2.HTML Helpers-->
                @*@Html.ActionLink("Home", "Index", "Home", null, new { @class="btn btn-primary" })*@

            </nav>
        </center>
    </header>
    @* End Header   *@
    <div>
        @RenderBody()
    </div>

    @* Start Footer *@
    <footer>
        <center>
            <div>
                <p>CopyRights &copy; Route @DateTime.Now.Year</p>
            </div>
        </center>
    </footer>
    @* End Footer   *@
</body>
</html>
